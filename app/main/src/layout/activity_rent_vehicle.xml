<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rent_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    tools:context="com.anuj.rentalnepal.RentRoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#aaa"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:scaleType="fitXY"
                android:src="@mipmap/ktmtravels" />

            <LinearLayout
                android:id="@+id/ktmtravelslayout"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/text_bg_on_image">


                <TextView
                    style="@style/whiteTextStyle"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="KTM Travels Ltd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        style="@style/NormalTextStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        style="@style/NormalTextStyle"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="Bhaisipati, Lalitpur" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#aaa"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/yetitravel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/text_bg_on_image">


                <TextView
                    style="@style/whiteTextStyle"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Yeti Travels" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        style="@style/NormalTextStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        style="@style/NormalTextStyle"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="Baneshwor, Kathmandu" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#aaa"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/sanepa_lalitpur" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/text_bg_on_image">


                <TextView
                    style="@style/whiteTextStyle"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Car Heaven Rent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        style="@style/NormalTextStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        style="@style/NormalTextStyle"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="Pepsicola, Kathmandu" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#aaa"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/bike_detail4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/text_bg_on_image">


                <TextView
                    style="@style/whiteTextStyle"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Live life XL" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        style="@style/NormalTextStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        style="@style/NormalTextStyle"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="Thimi, Bhaktapur" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>
