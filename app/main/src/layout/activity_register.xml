<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.anuj.rentalnepal.Fragments.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@mipmap/ktm">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape2layerlist"
                android:gravity="center_horizontal|bottom"
                >

                <ImageView

                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@mipmap/ic_rntl"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                style="@style/BlackTextStyle"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Register Here"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:orientation="vertical">



            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/underline_background"
                android:maxLines="1"
                android:hint="Name"
                android:textColorHint="#000000"
                android:padding="10dp"
                android:gravity="center"
              />
            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/underline_background"
                android:maxLines="1"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#000000"
                android:padding="10dp"
                android:gravity="center"
              />

            <EditText
                android:id="@+id/register_address"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/underline_background"
                android:maxLines="1"
                android:hint="Address"
                android:textColorHint="#000000"
                android:padding="10dp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/register_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/underline_background"
                android:maxLines="1"
                android:hint="Phone"
                android:inputType="number"
                android:textColorHint="#000000"
                android:padding="10dp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/underline_background"
                android:maxLines="1"
                android:hint="Username"
                android:textColorHint="#000000"
                android:padding="10dp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/underline_background"
                android:maxLines="1"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#000000"
                android:padding="10dp"
                android:gravity="center"
                />


            <LinearLayout
                android:id="@+id/rent_submitlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="#2bcc8a"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    style="@style/whiteTextStyle"
                    android:id="@+id/register"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Sign Up" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</ScrollView>
