<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rent_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context="com.anuj.rentalnepal.RentRoomActivity">
    <ListView
        android:id="@+id/room_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#aaa"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/bhaisipati_lalitpur" />

            <LinearLayout
                android:id="@+id/bhasipatiLayout"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/text_bg_on_image">


                <TextView
                    style="@style/whiteTextStyle"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="4 Bedroom Bangalow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        style="@style/NormalTextStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        style="@style/NormalTextStyle"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="Bhaisipati, Lalitpur" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#aaa"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/house1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/text_bg_on_image">


                <TextView
                    style="@style/whiteTextStyle"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Furnished House" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        style="@style/NormalTextStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        style="@style/NormalTextStyle"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="Baneshwor, Kathmandu" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#aaa"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/house2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/text_bg_on_image">


                <TextView
                    style="@style/whiteTextStyle"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="3 Tala Ghar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        style="@style/NormalTextStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        style="@style/NormalTextStyle"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="Pepsicola, Kathmandu" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#aaa"
            >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:scaleType="centerCrop"
                android:src="@mipmap/house3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="6dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:background="@drawable/text_bg_on_image">


                <TextView
                    style="@style/whiteTextStyle"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="5 Storey Building" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageButton
                        style="@style/NormalTextStyle"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:src="@drawable/ic_place_black_24dp" />

                    <TextView
                        style="@style/NormalTextStyle"


                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:paddingBottom="10dp"
                        android:text="Thimi, Bhaktapur" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>
